{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Principal": {
				"AWS": ${user_arn}
			},
			"Action": "s3:ListBucket",
			"Resource": "arn:aws:s3:::${bucket}"
		},
		{
			"Effect": "Allow",
			"Principal": {
				"AWS": ${user_arn}
			},
			"Action": [
				"s3:DeleteObject",
				"s3:PutObject"
			],
			"Resource": "arn:aws:s3:::${bucket}/*"
		}
	]
}
